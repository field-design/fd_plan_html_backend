<!-- Page Script -->

<link rel="stylesheet" type="text/css" href="/assets/css/multi.min.css">
<script src="/assets/js/multi.min.js"></script>

<script>
/***************************
custom select
****************************/
var select_element = document.getElementById( 'custom-select' );
multi( select_element, {
    'enable_search': true,
    'search_placeholder': '検索...',
});
$( '#custom-select' ).multi();


/***************************
並び替え
****************************/
$( function() {
    $( ".sortable" ).sortable();
    $( ".sortable" ).disableSelection();
} );

$( function() {
    $( ".selected-wrapper" ).sortable();
    $( ".selected-wrapper" ).disableSelection();
} );
</script>


<!-- @import '/source/kit/end' -->
</body>
</html>
