<!-- Page Script -->
<!-- Remodal -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/remodal/1.0.5/remodal.min.js"></script>

<script>

/***************************
カレンダー切り替え
****************************/
$(function() {
    $('[name="select-calendar"]:radio').change( function() {
        if($('[id=lend-time]').prop('checked')) {
            $('.regular-stock-calendar').css({
                'opacity': '0',
                'height': '0'
            });
            $('.lend-time-calendar').css({
                'opacity': '1',
                'height': 'auto'
            });
        } else if($('[id=regular-stock]').prop('checked')){
            $('.regular-stock-calendar').css({
                'opacity': '1',
                'height': 'auto'
            });
            $('.lend-time-calendar').css({
                'opacity': '0',
                'height': '0'
            });
        }
    });
});


/***************************
予約区分
****************************/
$(function() {
    $('[name="classification"]:radio').change( function() {
        if($('[id=d1]').prop('checked')){
            $('.control-d1 input').removeAttr("disabled");
            $('.control-d2 input').attr("disabled", "disabled");
            $('.control-d1').css('opacity','1');
            $('.control-d2').css('opacity','.2');
        } else if ($('[id=d2]').prop('checked')) {
            $('.control-d1 input').attr("disabled", "disabled");
            $('.control-d2 input').removeAttr("disabled");
            $('.control-d1').css('opacity','.2');
            $('.control-d2').css('opacity','1');
        }
    });
});

/***************************
 在庫管理表
****************************/
$(function(){
    $('.thead select[name="select-all-set"]').each(function(i){
        $(this).addClass('number' + (i+1));
    });

    $('.tbody tr').each(function(i){
        $(this).children('td').each(function (i) {
            $(this).addClass('number' + (i+1));
        });
    });
});

$(function() {
  $('.btn-click').on('click',function(){
      var classnum = $(this).prev('span').children('select[name="select-all-set"]').attr('class');
      var val = $(this).prev('span').children('select[name="select-all-set"]').val();

      if($('.tbody tr td').hasClass(classnum)){
          $('.tbody tr .' + classnum).find('select[name="select-all-receive"]').val(val);
      }
  });
});

</script>

