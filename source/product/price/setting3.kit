    // });
} );

/***************************
設定入力表示切り替え
****************************/
$(function() {
    $('[name="select-price"]:radio').change( function() {
        if($('[id=lend-time]').prop('checked')) {
            $('.regular-stock-price').css({
                'opacity': '0',
                'height': '0'
            });
            $('.lend-time-price').css({
                'opacity': '1',
                'height': 'auto'
            });
        } else if($('[id=regular-stock]').prop('checked')){
            $('.regular-stock-price').css({
                'opacity': '1',
                'height': 'auto'
            });
            $('.lend-time-price').css({
                'opacity': '0',
                'height': '0'
            });
        }
    });
});

/***************************
datepicker
****************************/
$(function() {
    $('.js-datepicker').datepicker();
    $('.js-timepicker').timepicker({
        'timeFormat': 'H:i',
        'scrollDefault': 'now',
        'step': 15
    });
});


/***************************
限定公開URL
****************************/
$('.limited-link-url').hide();
$('[name=limited-link]').click(function() {
    if ($('input[name=limited-link]:eq(1)').prop('checked')) {
        $('.limited-link-url').fadeIn();
    } else {
        $('.limited-link-url').fadeOut();
    }
});

/***************************
多言語機能
****************************/
$('.multilanguage-on').hide();
$('[name=multilanguage]').click(function() {
